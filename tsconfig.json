{
  "compilerOptions": {
    "target": "ESNext",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "declaration": true,
    "sourceMap": true,

    "outDir": "dist",

    "typeRoots": ["node_modules/@types", "src/@types"]
  }
}
